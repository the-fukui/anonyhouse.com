{
  "plugins": [
    "stylelint-order"
  ],
  "extends": [
    "stylelint-config-standard"
  ],
  "customSyntax": "postcss-scss",
  "rules": {
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": [
          "global"
        ]
      }
    ],
    "no-invalid-position-at-import-rule": null,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "function",
          "if",
          "for",
          "each",
          "include",
          "mixin",
          "else",
          "extend"
        ]
      }
    ],
    "no-empty-source": null
  },
  "ignoreFiles": [
    "**/node_modules/**"
  ]
}